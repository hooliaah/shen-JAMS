
<div class="container-flex" id="login-container">

  <div class="row d-flex login-nav mx-auto">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <ul class="nav nav-tabs">
        <li role="presentation" class="nav-item active" id="login-button">
          <a class="nav-link">Login</a>
        </li>
        <li role="presentation" class="nav-item" id="signup-button">
          <a class="nav-link">Sign up</a>

        </li>
      </ul>

      <div id="login-form" class="collapse">
        <form >
          <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" class="form-control" name="email_address" placeholder="Enter your email...">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" placeholder="Enter your password...">
          </div>
          <button class="btn btn-primary btn-block"><a href="/home/1">Quick Login</a></button>
          <button class="btn btn-primary btn-block" id="login-button">Login with email</button>

        </form>
      </div>
      <div id="signup-form" class='collapse'>
        <form>
            <div class=' form-group'>
                <label>First Name:</label>
                <input id="first-name" type='text' placeholder='John' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Last Name:</label>
                <input id="last-name" type='text' placeholder='Doe' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Phone Number:</label>
                <input id="phone" type = 'number' placeholder = '(123)456-7890' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Email:</label>
                <input id="email-address" type='text' placeholder='Enter your Email' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Password:</label>
                <input id="password" type = 'password' placeholder = 'Password: (must be at least 6 characters)' class='form-control'/>
            </div>


            <div class='form-group'>
                <label>Default Address:</label>
                <input id="address-street" type = 'text' placeholder = 'Street, Apt #' class='form-control'/>
                <input id="address-city-state" type = 'text' placeholder = 'City, State' class='form-control'/>
                <input id="address-zip" type = 'number' placeholder = 'Zip' class='form-control'/>
            </div>

            <button class='btn btn-primary btn-block'>Add Interests</button>

        </form>
      </div>

      <div class="col-md-2"></div>
