
<div class="container-flex" id="login-container">

  <div class="row d-flex login-nav mx-auto">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <ul class="nav nav-tabs">
        <li role="presentation" class="nav-item active" id="login-button">
          <a class="nav-link" href="#">Login</a>
        </li>
        <li role="presentation" class="nav-item" id="signup-button">
          <a class="nav-link" href="/signup">Sign up</a>
        </li>
      </ul>

      <div id="login-form">

        <form id="login" name="login" method="post" action="login">
          <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" class="form-control" name="email_address" placeholder="Enter your email...">
          </div>

          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" placeholder="Enter your password...">
          </div>

          <input class="btn btn-primary btn-block" type="submit" value="Sign In" />
        </form>
      </div>

      <div class="col-md-2"></div>
    </row>

    </div>
