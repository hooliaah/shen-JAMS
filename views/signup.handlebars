      <div class="container-flex" id="login-container">

  <div class="row d-flex login-nav mx-auto">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <ul class="nav nav-tabs">
        <li role="presentation" class="nav-item active" id="login-button">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li role="presentation" class="nav-item" id="signup-button">
          <a class="nav-link" href="/signup">Sign up</a>
        </li>
      </ul>
      <div id="signup-form">
        {{!-- <form id="signup" name="signup" method="post" action="/signup"> --}}
        <form id="signup" name="signup">
            <div class='form-group'>
                <label for="first_name">First Name:</label>
                <input id="first-name" type='text' name="first_name" placeholder='John' class='form-control'/>
            </div>

            <div class='form-group'>
                <label for="last_name">Last Name:</label>
                <input id="last-name" type='text' name="last_name" placeholder='Doe' class='form-control'/>
            </div>

            <div class='form-group'>
                <label for="phone">Phone Number:</label>
                <input id="phone" type = 'number' name="phone" placeholder = '(123)456-7890' class='form-control'/>
            </div>

            <div class='form-group'>
                <label for="email_address">Email:</label>
                <input id="email-address" type='text' name="email_address" placeholder='Enter your Email' class='form-control'/>
            </div>

            <div class='form-group'>
                <label for"password">Password:</label>
                <input id="password" type='password' name="password" placeholder = 'Password: (must be at least 6 characters)' class='form-control'/>
            </div>


            <div class='form-group'>
                <label for="address">Default Address:</label>
                <input id="address-street" name="address" type = 'text' placeholder = 'Street, Apt #' class='form-control'/>
                <input id="address-city-state" type='text' placeholder = 'City, State' class='form-control'/>
                <input id="address-zip" type='number' placeholder = 'Zip' class='form-control'/>
            </div>
            {{!-- <input class='btn btn-primary btn-block' type="submit" value="Sign Up" /> --}}
            <button class='btn btn-primary btn-block'>Add Interests</button>

        </form>
      </div>