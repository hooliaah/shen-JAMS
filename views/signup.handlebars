<div class="container-flex" id="signup-container">

  <div class="row d-flex signup-nav mx-auto">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <ul class="nav nav-tabs">
        <li role="presentation" class="nav-item convertToGrey" id="login-button">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li role="presentation" class="nav-item active" id="signup-button">
          <a class="nav-link" href="/signup">Sign up</a>
        </li>
      </ul>

      <div id="signup-form">
        <form>
            <div class='form-group'>
                <label>First Name:</label>
                <input id="first-name" type='text' placeholder='John' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Last Name:</label>
                <input id="last-name" type='text' placeholder='Doe' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Phone Number:</label>
                <input id="phone" type = 'number' placeholder = '(123)456-7890' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Email:</label>
                <input id="email-address" type='text' placeholder='Enter your Email' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Password:</label>
                <input id="password" type = 'password' placeholder = 'Password: (must be at least 6 characters)' class='form-control'/>
            </div>


            <div class='form-group'>
                <label>Default Address:</label>
                <input id="address-street" type = 'text' placeholder = 'Street, Apt #' class='form-control'/>
                <input id="address-city-state" type = 'text' placeholder = 'City, State' class='form-control'/>
                <input id="address-zip" type = 'number' placeholder = 'Zip' class='form-control'/>
            </div>

            <button class='btn btn-primary btn-block'>Add Interests</button>

        </form>
      </div>
